          <defs>
          <clipPath id="clip0_803_1673">
          <rect width="16" height="16" fill="white" transform="translate(0 0.5)"/>
          </clipPath>
          </defs>
        </svg>
        <span>{{ date }}</span>
      </div>
    {% endif %}
    {% if image %}
      {% if image.entity is not empty %}
        {# Output the image and alt #}
        <div class="imgcont_news">
        <img src="{{ file_url(image.entity.field_media_image.entity.uri.value) }}" alt="{{ image.entity.field_media_image.alt }}" class="card_news_img">
        </div>
      {% else %}
        <div class="card_news_img">
          {{ image }}
        </div>
      {% endif %}
    {% endif %}
  </div>
</a>
{% endmacro %}
{% macro actualiteItem(view_node, title, date, libelle, image, classes = null) %}
<a href="{{ view_node }}" class="news_card {{ classes }}">
  <div>
    {# Increment for display #}
    {% if libelle %}
      <span class="news_tag">{{ libelle }}</span>
    {% endif %}
    {% if title %}
      <h3 class="news_title mt-4">{{ title }}</h3>
    {% endif %}
  </div>
  <div class="d-flex">
